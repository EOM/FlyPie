{
    "name": "wyrihaximus/fly-pie",
    "description": "Flysystem integration plugin for CakePHP 4",
    "type": "cakephp-plugin",
    "license": "MIT",
    "keywords": [
        "flysystem",
        "cakephp"
    ],
    "authors": [
        {
            "name": "Cees-Jan Kiewiet",
            "email": "ceesjank@gmail.com",
            "homepage": "http://wyrihaximus.net/"
        }
    ],
    "require": {
        "php": ">=7.2",
        "cakephp/cakephp": "^4.0",
        "league/flysystem": "^2.0"
    },
    "require-dev": {
        "cakephp/debug_kit": "^4.0",
        "lorenzo/piping-bag": "^1.0",
        "phake/phake": "3.*",
        "phpstan/phpstan": "^0.12.14",
        "phpunit/phpunit": "~8.5.0",
        "squizlabs/php_codesniffer": "~3.5.0"
    },
    "autoload": {
        "psr-4": {
            "WyriHaximus\\FlyPie\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WyriHaximus\\Tests\\FlyPie\\": "tests/"
        },
        "files": [
            "tests/functions.php"
        ]
    },
    "scripts": {
        "all": [
            "@phpcs",
            "@stan",
            "@phpunit"
        ],
        "travis": [
            "@phpcs",
            "@stan",
            "@phpunit-travis"
        ],
        "phpcs": "phpcs -p",
        "stan": "phpstan analyse src/ -vvv",
        "phpunit": "phpunit --coverage-text",
        "phpunit-travis": "phpunit --coverage-text --coverage-clover ./build/logs/clover.xml",
        "travis-coverage": "if [ -f ./build/logs/clover.xml ]; then wget https://scrutinizer-ci.com/ocular.phar && php ocular.phar code-coverage:upload --format=php-clover ./build/logs/clover.xml; fi"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.2"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}