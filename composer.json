{
    "name": "wyrihaximus/fly-pie",
    "description": "Flysystem integration plugin for CakePHP3",
    "type":"cakephp-plugin",
    "license": "MIT",
    "keywords": [
        "flysystem",
        "cakephp",
        "cakephp3"
    ],
    "authors": [
        {
            "name": "Cees-Jan Kiewiet",
            "email": "ceesjank@gmail.com",
            "homepage": "http://wyrihaximus.net/"
        }
    ],
    "require": {
        "php": ">=5.4.19",
        "cakephp/cakephp": "3.0.*-dev",
        "cakephp/plugin-installer": "dev-master",
        "league/flysystem": "~0.5"
    },
    "require-dev": {
        "satooshi/php-coveralls": "~0.6",
        "phpunit/phpunit": "~4.4",
        "phake/phake": "~1.0",
        "wyrihaximus/phpunit-class-reflection-helpers": "dev-master",
        "vectorface/dunit": "~2.0",
        "squizlabs/php_codesniffer": "~1.0",
        "object-calisthenics/phpcs-calisthenics-rules": "~1.0",

        "aws/aws-sdk-php": "~2.4",
        "predis/predis": "~1.0",
        "dropbox/dropbox-sdk": "~1.1.1",
        "rackspace/php-opencloud": "~1.10.0",
        "sabre/dav": "~2.0.2",
        "barracuda/copy": "~1.1.4",
        "guzzlehttp/guzzle": "~4.0",
        "phpseclib/phpseclib": "~0.3.5"
    },
    "autoload": {
        "psr-4": {
            "WyriHaximus\\FlyPie\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WyriHaximus\\Tests\\FlyPie\\": "tests/"
        }
    }
}
